<h1>create new flat</h1>
<div class="container mt-4">
 <div class="col-6 m-auto">
  <h1>Add a new Flat</h1>
    <div class="mt-3">
     <%= simple_form_for @flat do |f| %>
        <%= f.input :name%>
        <%= f.input :address%>
        <%= f.input :url %>
        <%= f.input :description %>
        <%= f.input :price_per_night %>
        <%= f.input :number_of_guests %>
        <%= f.submit "Create Flat", class: "btn btn-primary" %>
        <%= link_to "Cancel", flats_path, class: "btn btn-danger"%></button>
      <% end %>
    </div>
 </div>
</div>



